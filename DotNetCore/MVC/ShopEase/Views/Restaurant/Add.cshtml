@model ShopEase.ViewModels.Restaurant.RestaurantVm
<h2>Add New Restaurant</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <span class="text-danger"><b>@ViewBag.ErrorMessage</b></span>

            <div class="form-group">
                <label asp-for="RestaurantName" class="control-label"><b>Restaurant Name</b></label>
                <input asp-for="RestaurantName" class="form-control" />
                <span asp-validation-for="RestaurantName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="MobileNumber" class="control-label"><b>Mobile Number</b></label>
                <input asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Location" class="control-label"><b>Location</b></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"><b>Rating</b></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>