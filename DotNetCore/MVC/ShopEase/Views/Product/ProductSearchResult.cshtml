@model List<ShopEase.ViewModels.ProductSearchResultVm>

<h1>Product Search Result</h1>

<html>
<br />
<body>
    <form>
        <table border="3px" class="table">
            <tr>
                <td><b>Product Name</b></td>
                <td><b>Category Name</b></td>
                <td><b>Brand Name</b></td>
                <td><b>Price</b></td>
                <td><b>Actual Price</b></td>
            </tr>

            @foreach (ShopEase.ViewModels.ProductSearchResultVm productSearchResultVm in Model)
            {
                <tr>
                    <td><b><a href="https://localhost:7150/Product/View/@productSearchResultVm.Id">@productSearchResultVm.ProductName</a></b></td>
                    <td><b>@productSearchResultVm.CategoryName</b></td>
                    <td><b>@productSearchResultVm.BrandName</b></td>
                    @* <td><b><a href="https://localhost:7150/Product/GetByBrand/@productSearchResultVm.BrandId">@productSearchResultVm.BrandName</a></b></td> *@
                    <td><b>@productSearchResultVm.Price</b></td>
                    <td><b>@productSearchResultVm.ActualPrice</b></td>
                </tr>
            }
        </table>
    </form>
</body>
</html>