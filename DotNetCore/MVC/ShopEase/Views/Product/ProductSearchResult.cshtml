@model List<ShopEase.ViewModels.ProductSearchResultVm>

<html>
<head>
    <style>
        body {
            padding: 10px;
        }

        h1 {
            margin-bottom: 20px;
        }

        table {
            width: 70%;
            margin-top: 20px;
        }

        td {
            padding: 5px;
            vertical-align: top;
        }

        img {
            width: 120px;
            height: 120px;
            object-fit: cover;
        }

        form {
            margin-top: 10px;
        }

        .red-text {
            color: red;
        }

        .right-data {
            width: 80%;
        }

        #popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1;
            background-color: #f1f1f1;
            padding: 15px;
            border: 1px solid #d4d4d4;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .hide-table {
            display: none;
        }
        #buttonContainer {
            position: fixed;
            top: 180px;
        }
        #showButton, #closeButton {
            display: block;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <h1>Product Search Result</h1>

    <b>Total Count Record: @ViewBag.TotalCountRecord</b>
    <br />
    <br />
    <form>
        <table id="dataTable" class="hide-table">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="https://localhost:7150/Product/View?Id=@item.Id">
                            <img src="/UploadedFiles/@item.ImageName" />
                        </a>
                    </td>
                    <td class="right-data">
                        <div>
                            <p><a href="https://localhost:7150/Product/View/@item.Id"><b>@item.Title</b></a></p>
                            <p><a href="https://localhost:7150/Product/ProductSearchResultByBrand?brandId=@item.BrandId"><b>@item.BrandName</b></a></p>
                            <p><b>@item.CategoryName</b></p>
                            <p><b>₹ @item.Price</b></p>
                            <p class="red-text"><b>₹ @item.ActualPrice</b></p>
                            <p><b>@item.Quantity</b></p>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2"><hr /></td>
                </tr>
            }
        </table>
    </form>

    <div id="buttonContainer">
        <button id="showButton" onclick="toggleData()" class="btn btn-primary">Show</button>
        <button id="closeButton" onclick="toggleData()" style="display: none;" class="btn btn-primary">Close</button>
    </div>
    
    <script>
        function toggleData() {
            var dataTable = document.getElementById('dataTable');
            var showButton = document.getElementById('showButton');
            var closeButton = document.getElementById('closeButton');

            if (dataTable.classList.contains('hide-table')) {
                dataTable.classList.remove('hide-table');
                showButton.style.display = 'none';
                closeButton.style.display = 'block';
            } else {
                dataTable.classList.add('hide-table');
                showButton.style.display = 'block';
                closeButton.style.display = 'none';
            }
        }
    </script>
</body>
</html>
