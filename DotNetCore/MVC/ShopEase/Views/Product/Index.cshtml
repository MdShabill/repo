@model List<ShopEase.ViewModels.Product.ProductVm>

<h1>Product Table</h1>

<html>
<head>
    <title>Product Table</title>
</head>
<br />
<span class="text-success"> <b> @TempData["SuccessMessageForAdd"] </b> </span>
<br />
<div>
    <b><b><a href="https://localhost:7150/Product/Add"> Add </a></b></b>
</div
<br />

<body>
    <form>
        <table border="3px" class="table">
            <tr class="table1">
                <td><b>Product Name</b></td>
                <td><b>Brand Name</b></td>
                <td><b>Price</b></td>
                <td><b>Discount</b></td>
                <td><b>Category Name</b></td>
                <td><b>Supplier Name</b></td>
            </tr>

            @foreach (ShopEase.ViewModels.Product.ProductVm productVm in Model)
            {
                <tr class="table1">
                    <td><b>@productVm.ProductName</b></td>
                    <td><b>@productVm.BrandName</b></td>
                    <td><b>@productVm.Price</b></td>
                    <td><b>@productVm.Discount</b></td>
                    <td><b>@productVm.CategoryName</b></td>
                    <td><b>@productVm.SupplierName</b></td>
                </tr>
            }
        </table>
    </form>
</body>
