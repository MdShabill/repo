@model CustomerVm

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<hr />
<html>

<head>
    <title>Customer View</title>
</head>
<style>
    .heading {
        background-color: rgb(113, 168, 175);
        font-family: Verdana;
    }

    .table {
        width: 40;
        height: 25;
        font-size: large;
        font-family: sans-serif;
    }
</style>

<body>
    <form>
        
        <h2 class="heading">
            Customer View
        </h2>

        <table class="table">
            <tr>
                <td><b>Full Name:</b></td>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <td><b>Last Name:</b></td>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <td><b>Gender:</b></td>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <td><b>Email:</b></td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td><b>DateOfBirth:</b></td>
                <td>@Model.DateOfBirth</td>
            </tr>
            <tr>
                <td><b>Mobile:</b></td>
                <td>@Model.Mobile</td>
            </tr>
            <br/>
        </table>
        <a href="http://localhost:5277/Customer/Index"> <b>Back Home</b> </a>
    </form>
</body>

</html>
