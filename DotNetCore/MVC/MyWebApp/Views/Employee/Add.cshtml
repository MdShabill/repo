@model MyWebApp.Models.Employee

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                
                <label class="control-label">Full Name</label>
                <input type="Text" id="FullName" name="FullName" class="form-control" new { required="required" } />
                <span asp-validation-for="FullName" class="text-danger"></span>
            
            </div>
            
        </br>
            
            <div class="form-group">

                <label for="FatherName" class="control-label">Father's Name</label>
                <input type="Text" id="FatherName" name="FatherName" class="form-control" new { required="required" } />
                <span asp-validation-for="FatherName" class="text-danger"></span>

            </div>

        </br>
            
            <div class="form-group">

                <label for="Email" class="control-label">Email</label>
                <input type="Text" id="Email" name="Email" class="form-control" new { required="required" } />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </br>

            <div class="form-group">

                <tr>
                    <td><b>Country:</b></td>
                    <td>  
                        @*Country dropdown hard coded approach*@
                        <select id="CountryId" name="CountryId">
                            <option> Select </option>
                            <option value="1">India</option>
                            <option value="2">Canada</option>
                            <option value="3">Japan</option>
                            <option value="4">Australia</option>
                            <option value="5">Pakistan</option>
                            <option value="6">Afghanistan</option>
                            <option value="7">United State</option>
                            <option value="8">United Kingdom</option>
                        </select>
                    </td>
                </tr>

            </div>

        </br>

            <div class="form-group">
                @*Static Approach On Qualification Dropdown *@
                <label class="control-label">Qualification Name</label>
                
                @Html.DropDownListFor(model => model.QualificationId, ViewBag.Qualification as SelectList, "-- Select --", new { @class = "form-control" })
                
                @Html.ValidationMessageFor(model => model.QualificationId, "", new { @class = "text-danger" })
            </div>

        </br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="http://localhost:5277/Employee/Index"> <b>Back To Home</b> </a>
</div>

