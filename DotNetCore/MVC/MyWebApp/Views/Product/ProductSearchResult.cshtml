@model List<MyWebApp.Models.Product>

@{
    ViewData["Title"] = "ProductSearchResult";
}

<html>
<head>
    <title>Product Table</title>
</head>
<br />
<body>
    <form>
        <table border="3px" class="table">
            <tr class="table1">
                <td><b>Product Name</b></td>
                <td><b>Brand Name</b></td>
                <td><b>Price</b></td>
                <td><b>Color Name</b></td>
                <td><b>Action</b></td>
            </tr>

            @foreach (Product product in Model)
            {
                <tr class="table1">
                    <td><b>@product.ProductName</b></td>
                    <td><b>@product.BrandName</b></td>
                    <td><b>@product.Price</b></td>
                    <td><b>@product.ColorName</b></td>
                    <td>
                        <b>
                            @Html.ActionLink("Edit", "Edit", new { id = product.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = product.Id })
                        </b>
                    </td>
                </tr>
            }
        </table>
    </form>
</body>
</html>
