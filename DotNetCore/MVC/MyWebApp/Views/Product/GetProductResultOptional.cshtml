@model List<MyWebApp.ViewModels.Products.ProductResultOptionalVm>

@{
    ViewData["Title"] = "GetProductResultOptional";
}

<html>
<head>
    <title>Product Table</title>
</head>
<br />
<body>
    <form>
        <table border="3px" class="table">
            <tr>
                <td><b>Product Name</b></td>
                <td><b>Brand Name</b></td>
                <td><b>Color Name</b></td>
                <td><b>Size Name</b></td>
                <td><b>Price</b></td>
            </tr>

            @foreach (MyWebApp.ViewModels.Products.ProductResultOptionalVm productResultVm in Model)
            {
                <tr>
                    <td><b>@productResultVm.ProductName</b></td>
                    <td><b>@productResultVm.BrandName</b></td>
                    <td><b>@productResultVm.ColorName</b></td>
                    <td><b>@productResultVm.SizeName</b></td>
                    <td><b>@productResultVm.Price</b></td>
                </tr>
            }
        </table>
    </form>
</body>
</html>