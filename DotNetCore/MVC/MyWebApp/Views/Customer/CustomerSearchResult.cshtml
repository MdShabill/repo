@model List<MyWebApp.ViewModels.CustomerSearchVm>

@{
    ViewData["Title"] = "CustomerSearchResult";
}

<html>
<head>
    <title>Customer Table</title>
</head>
<br />
<body>
    <form>
        <table border="3px" class="table">
            <tr>
                <td><b>First Name</b></td>
                <td><b>Last Name</b></td>
                <td><b>Gender</b></td>
                <td><b>Action</b></td>
            </tr>

            @foreach (CustomerSearchVm vmFilter in Model)
            {
                <tr>
                    <td><b>@vmFilter.FirstName</b></td>
                    <td><b>@vmFilter.LastName</b></td>
                    <td><b>@vmFilter.Gender</b></td>
                    <td>
                        <b>
                            @Html.ActionLink("Edit", "Edit", new { id = vmFilter.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = vmFilter.Id })
                        </b>
                    </td>
                </tr>
            }
        </table>
    </form>
</body>
</html>
