@model ConstructEase.WebApp.ViewModels.SiteVm

<h3 class="text-center my-4 fw-bold">Edit Site</h3>

<style>
    .dropdown-toggle {
        width: 100%;
        text-align: left;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Update" method="post" class="border p-4 rounded shadow bg-light">

            <input type="hidden" id="Id" name="Id" value="@Model.Id">

            <div class="form-group mb-3">
                <label asp-for="StartedDate" class="form-label fw-bold">Created Date</label>
                <input asp-for="StartedDate" class="form-control" type="date" value="@Model.StartedDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="StartedDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-bold">Site Name</label>
                <input asp-for="Name" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SiteStatusId" class="control-label"><b>Site Status</b></label>
                @Html.DropDownListFor(model => model.SiteStatusId, (SelectList)ViewBag.SiteStatus, "-- SELECT STATUS --", new { @class = "form-control" })
            </div>
            <br />

            <div class="row">
                <!-- Master Masons -->
                <div class="col-md-6">
                    <div class="dropdown mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                            <b>Masons</b>
                        </button>
                        <ul class="dropdown-menu p-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in (MultiSelectList)ViewBag.Name)
                            {
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedMasterMasonIds"
                                               value="@item.Value"
                                               @(Model.SelectedMasterMasonIds != null && Model.SelectedMasterMasonIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Labours -->
                <div class="col-md-6">
                    <div class="dropdown mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                            <b>Labours</b>
                        </button>
                        <ul class="dropdown-menu p-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in (MultiSelectList)ViewBag.Labours)
                            {
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedLabourIds"
                                               value="@item.Value"
                                               @(Model.SelectedLabourIds != null && Model.SelectedLabourIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Electricians -->
                <div class="col-md-6">
                    <div class="dropdown mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                            <b>Electricians</b>
                        </button>
                        <ul class="dropdown-menu p-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in (MultiSelectList)ViewBag.Electricians)
                            {
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedElectricianIds"
                                               value="@item.Value"
                                               @(Model.SelectedElectricianIds != null && Model.SelectedElectricianIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Plumbers -->
                <div class="col-md-6">
                    <div class="dropdown mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                            <b>Plumbers</b>
                        </button>
                        <ul class="dropdown-menu p-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in (MultiSelectList)ViewBag.Plumbers)
                            {
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedPlumberIds"
                                               value="@item.Value"
                                               @(Model.SelectedPlumberIds != null && Model.SelectedPlumberIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Painters -->
                <div class="col-md-6">
                    <div class="dropdown mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                            <b>Painters</b>
                        </button>
                        <ul class="dropdown-menu p-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in (MultiSelectList)ViewBag.Painters)
                            {
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedPainterIds"
                                               value="@item.Value"
                                               @(Model.SelectedPainterIds != null && Model.SelectedPainterIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Carpenters -->
                <div class="col-md-6">
                    <div class="dropdown mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                            <b>Carpenters</b>
                        </button>
                        <ul class="dropdown-menu p-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in (MultiSelectList)ViewBag.Carpenters)
                            {
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedCarpenterIds"
                                               value="@item.Value"
                                               @(Model.SelectedCarpenterIds != null && Model.SelectedCarpenterIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>

                <!-- Tilers -->
                <div class="col-md-6">
                    <div class="dropdown mb-3">
                        <button class="btn btn-outline-secondary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown">
                            <b>Tilers</b>
                        </button>
                        <ul class="dropdown-menu p-3" style="max-height: 300px; overflow-y: auto;">
                            @foreach (var item in (MultiSelectList)ViewBag.Tilers)
                            {
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox"
                                               name="SelectedTilerIds"
                                               value="@item.Value"
                                               @(Model.SelectedTilerIds != null && Model.SelectedTilerIds.Contains(int.Parse(item.Value)) ? "checked" : "") />
                                        <label class="form-check-label">@item.Text</label>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
                
            <br />
            <button type="button" id="btnToggleAddressButton" class="btn btn-secondary mb-3" onclick="toggleAddressFields()">Tap for Address</button>

            <!-- Hidden Address Fields -->
            <div id="dvAddressFields" style="display: none;">
                <div class="form-group mb-3">
                    <label asp-for="AddressTypeId" class="control-label"><b>Address Type</b></label>
                    @Html.DropDownListFor(model => model.AddressTypeId, ViewBag.AddressTypes as SelectList, "-- Select --", new { @class = "form-control" })
                    <span asp-validation-for="AddressTypeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CountryId" class="control-label"><b>Country Name</b></label>
                    @Html.DropDownListFor(model => model.CountryId, ViewBag.Countries as SelectList, "-- Select --", new { @class = "form-control" })
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label for="AddressLine1" class="control-label"><b>Address</b></label>
                    <textarea id="AddressLine1" name="AddressLine1" class="form-control">@Model.AddressLine1</textarea>
                </div>

                <div class="form-group mb-3">
                    <label for="PinCode" class="control-label"><b>Pin Code</b></label>
                    <input type="text" id="PinCode" name="PinCode" value="@Model.PinCode" class="form-control" />
                    <span asp-validation-for="PinCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
                &nbsp;&nbsp;&nbsp;
                <input type="submit" value="Cancel" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    function toggleAddressFields() {
        const addressFields = document.getElementById("dvAddressFields");
        const button = document.getElementById("btnToggleAddressButton");

        if (addressFields.style.display === "none") {
            addressFields.style.display = "block";
            button.textContent = "Tap to Hide Address";
        } else {
            addressFields.style.display = "none";
            button.textContent = "Tap for Address";
        }
    }
</script>