@model List<ConstructionApplication.ViewModels.DailyAttendance.DailyAttendanceVm>

<h1>Attendance Report</h1>
<br/>
<html>
    <body>
        <span class="text-danger"> <b> @ViewBag.errorMessage </b> </span>
        <form method="get" asp-action="Index">
            <label><b>Range:</b></label>
            <input type="date" name="DateFrom" value="@ViewBag.DateFrom" />
            <input type="date" name="DateTo" value="@ViewBag.DateTo" />
            <button type="submit" class="btn btn-primary">Go</button>
        </form>
        <br/>
        <table border="3px" class="table">
            <tr class="table1">
                <td><b>Date</b></td>
                <td><b>Total Count(Master Mason + Labour)</b></td>
                <td><b>Total Master Mason Amount</b></td>
                <td><b>Total Labour Amount</b></td>
                <td><b>Total Amount</b></td>
            </tr>

            @foreach (ConstructionApplication.ViewModels.DailyAttendance.DailyAttendanceVm dailyAttendanceVm in Model)
            {
                <tr class="table1">
                <td><b>@dailyAttendanceVm.Date.ToString("dd-MMMM-yyyy")</b></td>
                <td><b>@dailyAttendanceVm.TotalCount</b><i>(@dailyAttendanceVm.TotalMasterMason + @dailyAttendanceVm.TotalLabour)</i></td>
                <td><b>@dailyAttendanceVm.MasterMasonAmount</b></td>
                <td><b>@dailyAttendanceVm.LabourAmount</b></td>
                <td><b>@dailyAttendanceVm.TotalAmount</b></td>
                </tr>
            }
        </table>
    </body>
</html>